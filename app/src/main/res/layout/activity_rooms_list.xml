<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/rooms_list_activity_vertical_margin"
    android:paddingLeft="@dimen/rooms_list_activity_horizontal_margin"
    android:paddingRight="@dimen/rooms_list_activity_horizontal_margin"
    android:paddingTop="@dimen/rooms_list_activity_vertical_margin"
    tools:context="com.example.kunal.home.View.RoomsList">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/roomsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:scrollbars="vertical" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_below = "@+id/roomsList"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
